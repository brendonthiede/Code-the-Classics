{
	"name": "Code the Classics Codespaces Dev Container",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "../..",
		"args": {
			// Update 'VARIANT' to pick a Python version, e.g. 3.12-bookworm, 3.11-bookworm
			"VARIANT": "3.12-bookworm"
		}
	},

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.pylint",
				"ms-python.black-formatter"
			]
		}
	},

	// Port 6080: noVNC browser UI  |  Port 5901: raw VNC
	"forwardPorts": [6080, 5901],

	// Start the virtual display stack (Xvfb + VNC + noVNC + audio) every time the container starts.
	"postStartCommand": "/usr/local/bin/start-display.sh",

	"remoteUser": "vscode",

	"portsAttributes": {
		"6080": {
			"label": "Desktop (noVNC)",
			"onAutoForward": "openBrowser"
		},
		"5901": {
			"label": "VNC"
		}
	},
	"remoteEnv": {
		"DISPLAY": ":1"
	}
}